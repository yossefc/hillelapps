<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <solid android:color="#E6E6FA"/> <!-- Fond légèrement plus foncé quand pressé -->
            <stroke android:width="2dp" android:color="#0000FF"/> <!-- Contour bleu -->
            <corners android:radius="8dp"/> <!-- Coins arrondis -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#F3F3F6"/> <!-- Fond blanchâtre avec une légère teinte bleue -->
            <stroke android:width="2dp" android:color="#0000FF"/> <!-- Contour bleu -->
            <corners android:radius="8dp"/> <!-- Coins arrondis -->
        </shape>
    </item>
</selector>
